<%- include("../headerlogin.ejs")%>

<div class="container">
    <form method="POST" action="/user/add/confirm/<%= data.id %>">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%= data.name %>">
          </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" value="<%= data.description %>">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Jumlah Donasi</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" value="<%= finalValue %>" name="value_final">
              <small>Jumlah donasi ditambahkan 3 digit angka unik untuk pencatatan di sistem</small>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">No Rekening</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" value="BRI: 66562020123">
              <small>Silahkan transfer ke nomor rekening ini sesuai dengan jumlah donasi yg tertera, klik <strong>Setuju</strong> bila anda setuju.</small>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success"> Setuju </button>
            </div>
        </div>
      </form>
</div>

<%- include("../partials/footer.ejs")%>
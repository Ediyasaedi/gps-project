<%- include("../headerlogin.ejs")%>

<div class="container mt-3">
    <%- include("../partials/navbar.ejs")%>
</div>

<div class="container">
    <form method="POST" action="/user/donasi/add/<%= item[0].id %>">
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" value="<%= item[0].name %>">
          </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" value="<%= item[0].description %>">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Current value</label>
            <div class="col-sm-10">
              <input type="text" readonly class="form-control-plaintext" value="<%= item[0].value %>">
            </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Jumlah Donasi</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="jumlah_donasi" placeholder="Masukan jumlah donasi">
          </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Submit </button>
            </div>
        </div>
      </form>
</div>

<%- include("../partials/footer.ejs")%>
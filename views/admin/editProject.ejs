<%- include("../headerlogin.ejs")%>

<div class="container mt-3">
    <%- include("../partials/navbaradmin.ejs")%>
</div>

<div class="container">
    <form method="POST" action="/admin/edit/<%= project.id %>">
        <div class="form-group">
          <label class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" name="name" value="<%= project.name %>">
          </div>
          <label class="col-sm-2 col-form-label">Description</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" name="description" value="<%= project.description %>">
          </div>
          <label class="col-sm-2 col-form-label">Value</label>
          <div class="col-sm-10">
              <input type="text" readonly class="form-control" name="value" value="<%= project.value %>">
          </div>
          <label class="col-sm-2 col-form-label">Status</label>
          <div class="col-sm-10">
            <select class="form-control" name="isOpen">
                    <% if(project.isOpen) { %>
                        <option value="true" selected>Open</option>
                        <option value="false">Closed</option>
                    <% } else { %>
                        <option value="true">Open</option>
                        <option value="false" selected>Closed</option>
                    <% } %>
            </select>
          </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>
      </form>
</div>

<%- include("../partials/footer.ejs")%>